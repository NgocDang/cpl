@{
    Layout = "_DashboardLayout";
}

@section styles{
    <style>
        .text-center {
            text-align: center;
        }

        .card-img-top {
            width: 100%;
        }
        /*Call to Action*/

        .header-line {
            height: 1px;
            width: 100%;
            content: '';
            display: block;
            background: #dee2e6;
        }

        /*Utility Class*/
        .text-white {
            color: white;
        }

        .no-margin {
            margin: 0;
        }

        .no-margin-top {
            margin-top: 0;
        }

        .pad-right {
            margin-right: 0.5em;
        }
    </style>
}

@model DashboardViewModel
<div class="content">
    <div class="card card-stats col-md-12">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="statistics">
                        <div class="info">
                            <div class="icon icon-primary">
                                <i class="now-ui-icons shopping_credit-card"></i>
                            </div>
                            <button id="btn-wallet" class="btn btn-primary btn-md btn-round col-md-11">
                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Wallet")
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="statistics">
                        <div class="info">
                            <div class="icon icon-success">
                                <i class="now-ui-icons business_money-coins"></i>
                            </div>
                            <button id="btn-depo-withdr" class="btn btn-primary btn-md btn-round col-md-11">
                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "DepositAndWithdraw")
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="statistics">
                        <div class="info">
                            <div class="icon icon-info">
                                <i class="now-ui-icons loader_refresh"></i>
                            </div>
                            <button id="btn-wallet" class="btn btn-primary btn-md btn-round col-md-11">
                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Exchange")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="card cta cta--featured" style="height: 26rem;">
                <h4 class="card-title no-margin-top text-center" style="padding-top:1rem; padding-bottom:0.5rem">Wallet Balance</h4>
                <span class="header-line gradient-color-1" style="margin-bottom: 1.5rem"></span>
                <div class="card-body">
                    <div class="input-group mb-3 col-sm-12">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="padding-right:18px;width: 120px;display: inline; background-color:#f96332; color:#fff;font-size:20px" id="inputGroup-sizing-default">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TotalBalance")</span>
                        </div>
                        <input type="text" style="color:#fff;background-color:#f96332;text-align:center;font-size:20px" disabled class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")">
                    </div>

                    <div class="input-group mb-3 col-sm-12">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="padding-right:18px;width: 120px;display: inline; background-color:#fff;color:#808080;font-size:14px" id="inputGroup-sizing-default">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")</span>
                        </div>
                        <input type="text" disabled style="text-align:center;font-size:14px;color:#808080;background-color:#fff" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")">
                    </div>

                    <div class="input-group mb-3 col-sm-12">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="padding-right:18px;width: 120px;display: inline; background-color:#fff; color:#808080;font-size:14px" id="inputGroup-sizing-default">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "BTCSymbol")</span>
                        </div>
                        <input type="text" disabled style="text-align:center;font-size:14px;color:#808080;background-color:#fff" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")">
                    </div>

                    <div class="input-group mb-3 col-sm-12">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="padding-right:18px;width: 120px;display: inline; background-color:#fff; color:#808080;font-size:14px" id="inputGroup-sizing-default">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ETHSymbol")</span>
                        </div>
                        <input type="text" disabled style="text-align:center;font-size:14px;color:#808080;background-color:#fff" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6" id="pie-chart-card" style="display: none;">
            <div class="card" style="height: 26rem;">
                <div class="card-body">
                    <div class="col-md-12 mr-left ml-left">
                        <div id="pie-chart" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="card" id="line-chart-card">
        <div class="card-body">
            <div id="line-chart" class="col-12" style="height: 400px; margin: 0 auto"></div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div id="datatable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="dt-history" class="table table-striped table-bordered dataTable dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="datatable_info" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 334px;">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Date")</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 334px;">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Time")</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 334px;">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "GameType")</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 334px;">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Win")</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 334px;">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Loss")</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 334px;">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Balance")</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr role="row" class="odd">
                                    <td tabindex="0" class="">Airi Satou</td>
                                    <td>Accountant</td>
                                    <td class="sorting_1">Tokyo</td>
                                    <td>33</td>
                                    <td>12</td>
                                    <td>123</td>
                                </tr>
                                <tr role="row" class="odd">
                                    <td tabindex="0" class="">Airi Satou</td>
                                    <td>Accountant</td>
                                    <td class="sorting_1">Tokyo</td>
                                    <td>33</td>
                                    <td>12</td>
                                    <td>123</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script src="~/js/dashboard/plugins/highcharts.js"></script>
    <script src="~/js/dashboard/plugins/series-label.js"></script>
    <script src="~/js/dashboard/plugins/exporting.js"></script>
    <script src="~/js/dashboard/export-data.js"></script>
    <script src="~/js/dashboard/plugins/jquery.dataTables.min.js"></script>
    <script src="~/js/dashboard/cpl.dashboard.js"></script>
}
