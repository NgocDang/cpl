@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Index";
}
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@model X.PagedList.IPagedList<NewsViewModel>

<div class="app-content content">
    <div class="content-wrapper">
        @foreach (var item in Model)
        {
            <div><h2>@item.Title</h2></div>
        }
    </div>
</div>

<div class="text-center">
    <!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page = Page, status = ViewBag.Status }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
    You are in @Model.PageNumber (in @Model.PageCount page)
</div>

