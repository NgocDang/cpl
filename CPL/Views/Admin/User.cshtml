@model UserDashboardAdminViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Dashboard");
}

@section styles
    {
    <link href="~/css/dashboard/plugins/owl-carousel/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/dashboard/plugins/owl-carousel/owl.theme.default.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/js/dashboard/plugins/datatables/datatables.min.css">
    <link rel="stylesheet" href="~/js/dashboard/plugins/datatables/DataTables-1.10.16/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/js/dashboard/plugins/datatables/Responsive-2.2.1/css/responsive.bootstrap4.min.css" />
}
<div class="app-content container center-layout mt-2">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-12 col-12 mb-2">
                <h3 class="content-header-title mb-0 d-inline-block">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Dashboard")</h3>
            </div>
        </div>
        <div class="content-body">
            @await Component.InvokeAsync("Balance", Model.Id)
            @Html.HiddenFor(x => x.Id)
            <div id="profile-detail" class="row">
                <div class="col-lg-12 col-md-12 col-12 col-sm-12">
                    <h6 class="my-2 text-uppercase">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Profile")</h6>
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="card-text">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
                                            <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "FirstName")</p>
                                            <p>
                                                <strong>@Model.FirstName</strong>
                                            </p>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
                                            <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "LastName")</p>
                                            <p>
                                                <strong>@Model.LastName</strong>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
                                            <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Email")</p>
                                            <p>
                                                <strong> @Model.Email </strong>
                                            </p>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
                                            <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Mobile")</p>
                                            <p>
                                                <strong> @Model.Mobile </strong>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
                                            <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Address")</p>
                                            <p>
                                                <strong>
                                                    @Model.Address
                                                </strong>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-lg-6 col-md-12 col-12 col-sm-12">
                                            @if (Model.KYCVerified.HasValue)
                                            {
                                                if (Model.KYCVerified.Value)
                                                {
                                                    <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "KYC")</p>
                                                    <p>
                                                        <strong> @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "SuccessfullyVerified")</strong>
                                                    </p>

                                                }
                                                else
                                                {
                                                    <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "KYC")</p>
                                                    <p>
                                                        <strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "KYCIsPending")</strong>
                                                    </p>

                                                }

                                            }
                                            else
                                            {
                                                <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "KYC")</p>
                                                <p>
                                                    <strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "KYCNotVerified")</strong>
                                                </p>
                                            }
                                        </div>
                                        <div class="col-lg-6 col-md-12 col-12 col-sm-12">
                                            @if (Model.TwoFactorAuthenticationEnable)
                                            {
                                                <p class="text-muted mb-3px font-size-13px">
                                                    @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TwoFactorAuthentication")
                                                </p>
                                                <p>
                                                    <strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "IsEnabled")</strong>
                                                </p>
                                            }
                                            else
                                            {
                                                <p class="text-muted mb-3px font-size-13px">
                                                    @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TwoFactorAuthentication")
                                                </p>
                                                <p>
                                                    <strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "IsNotEnabled")</strong>
                                                </p>
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
                                            <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ETHHDWalletAddress")</p>
                                            <p>
                                                <strong> @Model.ETHHDWalletAddress</strong>
                                            </p>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
                                            <p class="text-muted mb-3px font-size-13px">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "BTCHDWalletAddress")</p>
                                            <p>
                                                <strong>@Model.BTCHDWalletAddress</strong>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("GameHistory", Model.Id)
        </div>
        <input type="hidden" value="@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "View")" id="view" />
    </div>
</div>

@section scripts
    {
    <script src="~/js/dashboard/plugins/datatables/datatables.min.js"></script>
    <script src="~/js/dashboard/plugins/datatables/DataTables-1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/dashboard/plugins/datatables/Responsive-2.2.1/js/dataTables.responsive.min.js"></script>
    <script src="~/js/dashboard/plugins/owl-carousel/owl.carousel.js"></script>
    <script src="~/js/dashboard/cpl.dtlang.js"></script>
    <script src="~/js/dashboard/cpl.balance.viewcomponent.js" asp-append-version="true"></script>
    <script src="~/js/dashboard/cpl.userdashboard.js" asp-append-version="true"></script>
    <script src="~/js/dashboard/cpl.gamehistory.viewcomponent.js" asp-append-version="true"></script>
}

