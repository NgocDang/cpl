@model AddPricePredictionCategoryAdminViewModel

<div class="modal" tabindex="-1" role="dialog" id="edit-price-prediction-category" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "PricePredictionCategory")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">×</span> </button>
            </div>
            <form id="form-edit-price-prediction-category" method="POST" action="#" class="needs-validation" novalidate="">

                <ul class="nav nav-tabs border-0">
                    @foreach (var detail in Model.PricePredictionCategoryDetailAdminViewModels)
                    {
                        <li class="nav-item">
                            <a class="nav-link font-medium-2 font-weight-bold px-2 border-0 @(detail.LangId == Context.Session.GetInt32("LangId").Value ? "active" : "")" id="@detail.LangId-nav-tab" data-toggle="tab" href="#@detail.LangId-nav" aria-controls="@detail.LangId-nav" aria-expanded="true">@detail.LangName</a>
                        </li>
                    }
                </ul>
                <div class="tab-content mb-1">
                    @foreach (var detail in Model.PricePredictionCategoryDetailAdminViewModels)
                    {
                        <div role="tabpanel" class="tab-pane @(detail.LangId == Context.Session.GetInt32("LangId").Value ? "active" : "")" id="@detail.LangId-nav" aria-labelledby="@detail.LangId-nav-tab" aria-expanded="true">

                            <div class="card ml-1 mr-1 mb-1">
                                <div class="card-content">
                                    <div class="card-body">
                                        <div class="modal-body">
                                            <div class="row pt-1">
                                                <div class="col-12">
                                                    <fieldset class="form-group">
                                                        <label for="Name" class="form-title">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Name")<span> ( @detail.LangName )</span></label>
                                                        <input name="Name" id="name" type="text" class="form-control" required autofocus />
                                                        <div class="invalid-feedback">
                                                            @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "PricePredictionCategoryNameRequired")
                                                        </div>
                                                    </fieldset>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12">
                                                    <fieldset class="form-group">
                                                        <label for="Description" class="form-title">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Description")<span> ( @detail.LangName )</span></label>
                                                        <input name="Description" id="description" type="text" class="form-control" />
                                                        <div class="invalid-feedback">
                                                            @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "DescriptionRequired")
                                                        </div>
                                                    </fieldset>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="hidden" value="@detail.LangId" id="lang-id" />
                                    </div>

                                </div>
                            </div>

                        </div>
                    }

                    <div class="modal-footer text-right pb-0">
                        <button type="button" class="btn btn-primary btn-sm btn-do-add">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Submit")</button>
                        <button type="button" class="btn btn-secondary btn-sm btn-do-cancel" data-dismiss="modal">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Cancel")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>