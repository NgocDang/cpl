@model NewsViewModel

<div class="modal" tabindex="-1" role="dialog" id="update-news" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="form-news" method="POST" action="#" class="needs-validation" novalidate="">
                <div class="modal-header">
                    <h5 class="modal-title">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "News")</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                </div>
                <div class="modal-body">
                    <div class="col-lg-12 col-md-12 col-12 col-sm-12">
                        <fieldset class="form-label-group">
                            @if (Model != null)
                            {
                                <input id="Title" type="text" value="@Model.Title" class="form-control" required name="Title" autofocus>
                            }
                            else
                            {
                                <input id="Title" type="text" class="form-control" required name="Title" autofocus>
                            }

                            <label for="Title" class="form-title">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Title")</label>
                            <div class="invalid-feedback">
                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TitleRequired")
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-lg-12 col-md-12 col-12 col-sm-12">
                        <div class="form-group">
                            @if (Model != null)
                            {
                                <textarea class="form-control textarea-maxlength" id="short-desc" rows="5" required>@Model.ShortDescription</textarea>
                            }
                            else
                            {
                                <textarea class="form-control textarea-maxlength" id="short-desc" rows="5" placeholder="Short description..." required>@Model.ShortDescription</textarea>
                            }
                            <div class="invalid-feedback">
                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ShortDescriptionRequired")
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-12 col-sm-12">
                        <div class="form-group" id="full-desc">
                            @if (Model != null)
                            {
                            <textarea class="tinymce" id="full-desc" required>@Model.Description</textarea>
                            }
                            else
                            {
                            <textarea class="tinymce" id="full-desc" required>Full description</textarea>
                            }
                            <div class="invalid-feedback">
                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "DescriptionRequired")
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-12 col-sm-12">
                        <fieldset class="form-label-group">
                            <input id="Image" type="file" value="@Model.Image" class="form-control" name="Image" maxlength="200">
                            <label for="Image" class="mt-0">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Image")</label>
                        </fieldset>
                    </div>
                    @Html.HiddenFor(x => x.Id)
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-submit" class="btn btn-sm btn-primary">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Add")</button>
                    <button type="button" id="btn-save" class="btn btn-sm btn-primary">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Save")</button>
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Cancel")</button>
                </div>
            </form>
        </div>
    </div>
</div>