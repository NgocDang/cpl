@model ViewPaymentPartialViewViewModel

<div class="modal" tabindex="-1" id="view-lottery" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Payment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">×</span> </button>
            </div>
            <div class="modal-body pl-3 pr-3">
                <h4 class="text-center form-group mb-3">Do you want to pay commision?</h4>
                <div class="row form-group">
                    <div class="col-6">Commision amount</div>
                    <div class="col-6 text-right">100 CPL  </div>
                </div>
                <div class="row form-group">
                    <div class="col-6">Period in Month</div>
                    <div class="col-6 text-right">@Model.Period</div>
                </div>
                <hr class="mb-2 mt-2" />
                <div class="row text-danger font-weight-bold font-medium-4">
                    <div class="col-6">Total</div>
                    <div class="col-6 text-right">@Model.CommissionAmount CPL</div>
                </div>
                <div class="row mt-2">
                    <div class="col-12 text-center mt-2">
                        <button class="btn btn-sm btn-primary mr-md-2 mr-1" id="btn-update">Cancel</button>
                        <button class="btn btn-sm btn-success" id="btn-confirm">Confirm</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>