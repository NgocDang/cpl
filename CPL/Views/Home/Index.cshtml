@{
    Layout = "_Layout";
    ViewData["Title"] = @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Home");
}
@section styles{
    <link href="~/css/dashboard/plugins/owl-carousel/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/dashboard/plugins/owl-carousel/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/css/dashboard/cpl.home.css" rel="stylesheet" />
}

<section id="slider-banner">
    <div class="mt-3">
        <div class="owl-carousel owl-theme owl-loaded">
            <div class="owl-stage-outer">
                <div class="owl-stage">
                    <div class="owl-item">
                        <img src="~/images/slider/slide_1.jpg" class="img-fluid img-border" />
                    </div>
                    <div class="owl-item">
                        <img src="~/images/slider/slide_2.jpg" class="img-fluid img-border" />
                    </div>
                    <div class="owl-item">
                        <img src="~/images/slider/slide_3.jpg" class="img-fluid img-border" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="scroll-game-info">
    <div id="navbar-scroll-game-info" class="navbar navbar-shadow mt-1">
        <div class="container">
            <marquee behavior="scroll" scrollamount="5" direction="left" width="100%">
                <p class="clearfix darken-2 text-sm-center mb-0 px-2 container center-layout">
                    <span class="d-block d-md-inline-block">
