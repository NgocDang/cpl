@model ConfirmExchangeViewModel

<div class="modal" tabindex="-1" role="dialog" id="exchange" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-sm mx-auto" role="document">
        <div class="modal-content">
            <form id="form-exchange" method="POST" action="#" class="needs-validation" novalidate="">
                <div class="modal-header text-center">
                    <h5 class="modal-title">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Confirm")</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                </div>
                <div class="modal-body text-center">
                    <label for="Name">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ConfirmExchangeWarning")</label>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5 col-12 text-left">
                                <fieldset class="form-label-group mb-0">
                                    <input type="text" class="form-control" id="from-currency" value="@Model.FromAmount.ToString("#,##0.#########")" readonly>
                                    <label for="from-currency">@Model.FromCurrency</label>
                                </fieldset>
                            </div>
                            <div class="col-md-2 col-12 text-center pt-1">
                                <span class="la la-arrow-right"></span>
                            </div>
                            <div class="col-md-5 col-12 text-left">
                                <fieldset class="form-label-group mb-0">
                                    <input type="text" class="form-control" id="to-currency" value="@Model.ToAmount.ToString("#,##0.#########")" readonly>
                                    <label for="to-currency">@Model.ToCurrency</label>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-confirm-exchange" class="btn btn-sm btn-primary">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Yes")</button>
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Cancel")</button>
                </div>
            @Html.HiddenFor(x => x.FromAmount)
            @Html.HiddenFor(x => x.FromCurrency)
            @Html.HiddenFor(x => x.ToAmount)
            @Html.HiddenFor(x => x.ToCurrency)
            </form>
        </div>
    </div>
</div>