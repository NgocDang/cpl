@model ProfileAffiliateViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Affiliate");
}
@section styles
    {
    <link href="~/css/dashboard/plugins/switchery/switchery.min.css" rel="stylesheet" />
}
<div class="app-content container center-layout mt-2 px-0">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new">
                <h3 class="content-header-title mb-0 d-inline-block">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Affiliate")</h3>
                <div class="row breadcrumbs-top d-inline-block">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Dashboard" asp-action="Index">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Dashboard")</a>
                            </li>
                            <li class="breadcrumb-item active">
                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Affiliate")
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <h6 class="my-2 text-uppercase">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Affiliate")</h6>
            @if (Model.IsKYCVerificationActivated && (!Model.KYCVerified.HasValue || !Model.KYCVerified.Value))
            {
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <p class="text-muted">@Html.Raw(@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "KYCRequiredBeforeAffiliate"))</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                if (!Model.AffiliateId.HasValue) // Not joined yet
                {
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <form id="form-submit-affiliate" class="form-horizontal" action="">
                                    <div class="row px-1">
                                        <div class="col-12 mb-2 p-2" style="height: 300px;overflow-y: scroll;background-color: #e9ecef">@Html.Raw(@LangMsgDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "AffiliateProgramPolicy"))</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-right">
                                            <button type="button" id="btn-do-submit-affiliate" class="btn btn-primary">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Submit")</button>
                                        </div>
                                    </div>
                                </form>
                                <div class="row">
                                    <div class="col-12" id="affiliate-response">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (Model.AffiliateId.Value == (int)EnumAffiliateApplicationStatus.PENDING) // Pending
                {
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                        <p class="text-muted">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "AffiliateApplicationReceived")</p>
                                        <span class="badge badge-info">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Pending")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else // Approved
                {
                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body">
                                        <div class="row pb-1">
                                            <div class="col-lg-9 col-12 pr-sm-0">
                                                <label class="font-weight-bold" for="Url">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "AffliateUrl")</label>
                                                <input readonly type="text" id="Url" value="@Model.AffiliateUrl" class="form-control" name="Url">
                                            </div>
                                            <div class="col-lg-3 col-12">
                                                <label class="text-muted d-sm-block d-none">&nbsp;</label>
                                                <button type="button" class="btn btn-copy d-block mt-sm-0 mt-1 w-100" data-clipboard-target="#Url"><i class="fas fa-copy"></i> @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Copy")</button>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-9 col-12">
                                                <p class="text-muted">
                                                    @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "AffliateUrlComment")
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <h6 class="my-2 text-uppercase">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Sales")</h6>
                            <div class="card ">
                                <div class="card-content">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-6 col-12">
                                                <p><strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Total")</strong></p>
                                                <h1>@Model.TotalSale.ToString("N0") @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")</h1>
                                            </div>
                                            <div class="col-lg-6 col-12">
                                                <div class="row">
                                                    <div class="col-lg-12 col-6">
                                                        <p class="text-muted mb-05">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Today")</p>
                                                        <h3>@Model.TotalSaleToday.ToString("N0") @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")</h3>
                                                    </div>
                                                    <div class="col-lg-12 col-6">
                                                        <p class="text-muted mb-05">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Yesterday")</p>
                                                        <h3>@Model.TotalSaleYesterday.ToString("N0") @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")</h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-12">
                            <h6 class="my-2 text-uppercase">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Register")</h6>
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-6 col-12">
                                                <p><strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Total")</strong></p>
                                                <h1><i class="la la-user"></i> @Model.TotalUserRegister.ToString("N0")</h1>
                                            </div>
                                            <div class="col-lg-6 col-12">
                                                <div class="row">
                                                    <div class="col-lg-12 col-6">
                                                        <p class="text-muted mb-05">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Today")</p>
                                                        <h3><i class="la la-user"></i> @Model.TotalUserRegisterToday.ToString("N0")</h3>
                                                    </div>
                                                    <div class="col-lg-12 col-6">
                                                        <p class="text-muted mb-05">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Yesterday")</p>
                                                        <h3><i class="la la-user"></i> @Model.TotalUserRegisterYesterday.ToString("N0")</h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <h6 class="my-2 text-uppercase">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "StandardAffiliateTiers")</h6>
                            <div class="card">
                                <form id="form-comission-rate-setting" method="POST" action="#" class="needs-validation" novalidate="">
                                    <div class="card-content">
                                        <div class="card-header">
                                            <h5 class="font-weight-bold">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "StandardAffiliateTiers")</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row form-group">
                                                <div class="col-md-2 col-sm-12 text-md-right mt-lg-1">
                                                    <label>Tier 1 Direct Rate</label>
                                                </div>
                                                <div class="col-md-3 col-12 mb-2">
                                                    <input type="number" min="0" max="100" name="Tier1DirectRate" class="form-control" maxlength="30" id="Tier1DirectRate" value="0" required>
                                                    <div class="invalid-feedback">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "StandardCommissionTier1Required")</div>
                                                </div>
                                                <div class="col-md-3 col-sm-12 text-md-right mt-lg-1">
                                                    <label>Tier 2 Sale To Tier 1 Rate</label>
                                                </div>
                                                <div class="col-md-3 col-12">
                                                    <input type="number" min="0" max="100" name="Tier1DirectRate" class="form-control" maxlength="30" id="Tier1DirectRate" value="0" required>
                                                    <div class="invalid-feedback">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "StandardCommissionTier1Required")</div>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-2 col-sm-12 text-md-right mt-lg-1">
                                                    <label>Tier 2 Direct Rate</label>
                                                </div>
                                                <div class="col-md-3 col-12 mb-2">
                                                    <input type="number" min="0" max="100" name="Tier1DirectRate" class="form-control" maxlength="30" id="Tier1DirectRate" value="0" required>
                                                    <div class="invalid-feedback">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "StandardCommissionTier1Required")</div>
                                                </div>
                                                <div class="col-md-3 col-sm-12 text-md-right mt-lg-1">
                                                    <label>Tier 3 Sale To Tier 1 Rate</label>
                                                </div>
                                                <div class="col-md-3 col-12">
                                                    <input type="number" min="0" max="100" name="Tier1DirectRate" class="form-control" maxlength="30" id="Tier1DirectRate" value="0" required>
                                                    <div class="invalid-feedback">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "StandardCommissionTier1Required")</div>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-2 col-sm-12 text-md-right mt-lg-1">
                                                    <label>Tier 3 Direct Rate</label>
                                                </div>
                                                <div class="col-md-3 col-12 mb-2">
                                                    <input type="number" min="0" max="100" name="Tier1DirectRate" class="form-control" maxlength="30" id="Tier1DirectRate" value="0" required>
                                                    <div class="invalid-feedback">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "StandardCommissionTier1Required")</div>
                                                </div>
                                                <div class="col-md-3 col-sm-12 text-md-right mt-lg-1">
                                                    <label>Tier 3 Sale To Tier 2 Rate</label>
                                                </div>
                                                <div class="col-md-3 col-12">
                                                    <input type="number" min="0" max="100" name="Tier1DirectRate" class="form-control" maxlength="30" id="Tier1DirectRate" value="0" required>
                                                    <div class="invalid-feedback">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "StandardCommissionTier1Required")</div>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-12 text-right">
                                                    <button class="btn btn-sm btn-primary btn-update mr-md-2 mr-1">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Update")</button>
                                                    <button class="btn btn-sm btn-primary btn-update">Payment</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="card-footer border-top-blue-grey border-top-lighten-5">
                                        <div class="row">
                                            <div class="col-sm-4 col-12 mb-1 text-lg-right">
                                                <label for="IsAccountActivationEnable" class="form-check-label">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "IsAccountActivationEnable") &nbsp; </label>
                                                <input id="IsAccountActivationEnable" checked="true" type="checkbox" class="form-check-input checkbox-switch" required name="IsAccountActivationEnable">
                                            </div>

                                            <div class="col-sm-4 col-12 mb-1 sm-1">
                                                <label for="IsAccountActivationEnable" class="form-check-label">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "IsAccountActivationEnable") &nbsp; </label>
                                                <input id="IsAccountActivationEnable" checked="true" type="checkbox" class="form-check-input checkbox-switch" required name="IsAccountActivationEnable">
                                            </div>

                                            <div class="col-sm-4 col-12 mb-1 text-lg-right">
                                                <label for="IsAccountActivationEnable" class="form-check-label">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "IsAccountActivationEnable") &nbsp; </label>
                                                <input id="IsAccountActivationEnable" checked="true" type="checkbox" class="form-check-input checkbox-switch" required name="IsAccountActivationEnable">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    @Html.Hidden("CopiedSuccessfully", @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "CopiedSuccessfully"))
</div>
@section scripts
    {
    <script src="~/js/dashboard/plugins/switchery/switchery.min.js"></script>
    <script src="~/js/dashboard/cpl.admin.topagencyaffiliate.js" asp-append-version="true"></script>
    <script src="~/js/dashboard/cpl.affiliate.js" asp-append-version="true"></script>
    <script src="~/js/dashboard/plugins/clipboard/clipboard.min.js"></script>
}
