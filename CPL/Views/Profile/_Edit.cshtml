                                <div>
                                    <label>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Gender")</label>
                                </div>
                                <div class="form-check form-check-radio" style="display: inline-block;padding-left: 0px">
                                    <label class="form-check-label">
                                        @if (!Model.Gender.HasValue || Model.Gender.Value)
                                        {
                                            <input class="form-check-input" type="radio" name="gender" id="Male" value="1" checked>
                                        }
