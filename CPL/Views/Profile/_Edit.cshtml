                        <div class="col-12 col-md-6">
                            <p class="text-uppercase mb-0"><a asp-controller="History" asp-action="Transaction">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Transactions") <i class="la la-mail-forward font-small-3"></i></a></p>
