@model EditCredentialViewModel
@{
    Layout = "_DashboardLayout";
}
@section styles
    {
}
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-8 col-12 mb-2 breadcrumb-new">
                <h3 class="content-header-title mb-0 d-inline-block">Edit Credential</h3>
                <div class="row breadcrumbs-top d-inline-block">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Edit Credential
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="content-header-right col-md-4 col-12 d-none d-md-inline-block">
                <div class="btn-group float-md-right"><a class="btn-gradient-secondary btn-sm white" href="#">Play game now</a></div>
            </div>
        </div>
        <div class="content-body">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12">
                    <!-- User Profile -->
                    <section class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-2 col-12">
                                            <img src="~/images/avatar-1.jpeg" class="rounded-circle height-70" alt="@Model.FirstName @Model.LastName" />
                                        </div>
                                        <div class="col-md-10 col-12">
                                            <h5>Edit Email</h5>
                                            <hr />
                                            <form id="form-edit-email" class="form-horizontal form-user-profile mt-2" action="">
                                                <div class="row mb-1">
                                                    <div class="col-md-6 col-sm-12">
                                                        <fieldset class="form-label-group">
                                                            <input type="email" name="CurrentEmail" readonly value="@Model.CurrentEmail" class="form-control" maxlength="30" id="CurrentEmail" required autofocus="">
                                                            <label for="CurrentEmail">Current email</label>
                                                        </fieldset>
                                                    </div>
                                                </div>
                                                <div class="row mb-1">
                                                    <div class="col-md-6 col-sm-12">
                                                        <fieldset class="form-label-group">
                                                            <input type="email" name="NewEmail" class="form-control" maxlength="30"  id="NewEmail" required autofocus="">
                                                            <label for="NewEmail">New email</label>
                                                            <div id="new-email-msg" class="invalid-feedback">
                                                                Existing email
                                                            </div>
                                                        </fieldset>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <fieldset class="form-label-group">
                                                            <input type="email" name="NewEmailConfirm" class="form-control" maxlength="30"  id="NewEmailConfirm" required autofocus="">
                                                            <label for="NewEmailConfirm">New email confirm</label>
                                                            <div id="new-email-confirm-msg" class="invalid-feedback">
                                                                Mismatch email
                                                            </div>
                                                        </fieldset>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 text-right">
                                                        <button type="button" id="btn-save-email" class="btn-gradient-primary my-1"><i class='far fa-save'></i> Save</button>
                                                    </div>
                                                </div>
                                            </form>
                                            <h5>Edit Password</h5>
                                            <hr />
                                            <form id="form-edit-password" class="form-horizontal form-user-profile mt-2" action="">
                                                <div class="row mb-1">
                                                    <div class="col-md-6 col-sm-12">
                                                        <fieldset class="form-label-group">
                                                            <input type="password" name="CurrentPassword" class="form-control" maxlength="30" id="CurrentPassword" required autofocus="">
                                                            <label for="CurrentPassword">Current password</label>
                                                            <div id="current-password-msg" class="invalid-feedback">
                                                                Invalid current password
                                                            </div>
                                                        </fieldset>
                                                    </div>
                                                </div>
                                                <div class="row mb-1">
                                                    <div class="col-md-6 col-sm-12">
                                                        <fieldset class="form-label-group">
                                                            <input type="password" name="NewPassword" class="form-control" maxlength="30" id="NewPassword" required autofocus="">
                                                            <label for="NewPassword">New password</label>
                                                        </fieldset>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <fieldset class="form-label-group">
                                                            <input type="password" name="NewPasswordConfirm" class="form-control" maxlength="30" id="NewPasswordConfirm" required autofocus="">
                                                            <label for="NewPasswordConfirm">New password confirm</label>
                                                            <div id="new-password-confirm-msg" class="invalid-feedback">
                                                                Mismatch password
                                                            </div>
                                                        </fieldset>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 text-right">
                                                        <button type="button" id="btn-save-password" class="btn-gradient-primary my-1"><i class='far fa-save'></i> Save</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title text-center">ICO Tokens</h6>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <div class="text-center row clearfix mb-2">
                                    <div class="col-12">
                                        <i class="icon-layers font-large-3 bg-warning bg-glow white rounded-circle p-3 d-inline-block"></i>
                                    </div>
                                </div>
                                <h3 class="text-center">3,458.88 CIC</h3>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-de mb-0">
                                    <tbody>
                                        <tr>
                                            <td>CIC Token</td>
                                            <td><i class="icon-layers"></i> 3,258 CIC</td>
                                        </tr>
                                        <tr>
                                            <td>CIC Referral</td>
                                            <td><i class="icon-layers"></i> 200.88 CIC</td>
                                        </tr>
                                        <tr>
                                            <td>CIC Price</td>
                                            <td><i class="cc BTC-alt"></i> 0.0001 BTC</td>
                                        </tr>
                                        <tr>
                                            <td>Raised BTC</td>
                                            <td><i class="cc BTC-alt"></i> 2154 BTC</td>
                                        </tr>
                                        <tr>
                                            <td>Raised USD</td>
                                            <td><i class="la la-dollar"></i> 4.52 M</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script src="~/js/dashboard/cpl.editcredential.js"></script>

}
