<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="description" content="CPL, crypto lottery, crypto price prediction">
    <meta name="keywords" content="CPL, cpl">
    <title>@ViewData["Title"] - @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")</title>
    <link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i|Comfortaa:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/dashboard/vendors.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/dashboard/app.min.css">
    <link rel="stylesheet" href="~/css/dashboard/horizontal-menu.min.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/dashboard/plugins/cryptocoins/cryptocoins.css">
    <link rel="stylesheet" type="text/css" href="~/css/dashboard/timeline.min.css">
    <link rel="stylesheet" href="~/css/dashboard/plugins/toastr/toastr.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/dashboard/dashboard-ico.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/dashboard/style.css" asp-append-version="true">
    @RenderSection("styles", required: false)
</head>
<body class="horizontal-layout horizontal-menu horizontal-menu-padding 2-columns menu-expanded" data-open="click" data-menu="horizontal-menu" data-col="2-columns">
    <div class="wrapper">
        @await Component.InvokeAsync("Header")
        @RenderBody()
    </div>

    @await Component.InvokeAsync("Footer")
    <div id="modal"></div>
    <script src="~/js/dashboard/vendors.min.js" type="text/javascript"></script>
    <script src="~/js/dashboard/jquery.sticky.js"></script>
    <script src="~/js/dashboard/horizontal-timeline.js" type="text/javascript"></script>
    <script src="~/js/dashboard/app-menu.min.js" type="text/javascript"></script>
    <script src="~/js/dashboard/app.min.js" type="text/javascript"></script>
    <script src="~/js/dashboard/demo.min.js" type="text/javascript"></script>
    <script src="~/css/dashboard/plugins/toastr/toastr.min.js"></script>
    <script src="~/js/dashboard/jquery.validate.min.js"></script>
    <script src="~/js/dashboard/cpl.layout.js" asp-append-version="true"></script>
    <script src="~/js/dashboard/cpl.viewcomponent.js" asp-append-version="true"></script>

    <!--  TEST -->
