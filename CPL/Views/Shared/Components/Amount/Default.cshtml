@model AmountViewModel
<div class="row">
    <div class="col-lg-6 col-12">
        <h6 class="my-2 text-uppercase">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol") @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Amount")</h6>
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <div class="col-12 mb-2">
                        <div class="row">
                            <div class="col-md-6 col-12">
                                <p><strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Amount"): </strong></p>
                                <h1>@Model.TokenAmount.ToString("#,##0.########") @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenSymbol")</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="owl-carousel owl-theme">
            <div class="item">
                <h6 class="my-2">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "BTCSymbol") @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Amount")</h6>
                <div class="card pull-up">
                    <div class="card-content">
                        <div class="card-body" id="btc-card">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-12">
                                        <p><strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Balance"): </strong></p>
                                        <h1>@Model.BTCAmount.ToString("#,##0.########")</h1>
                                        <p class="mb-0">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Increase") <strong>+10%</strong></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item">
                <h6 class="my-2">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ETHSymbol") @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Amount")</h6>
                <div class="card pull-up">
                    <div class="card-content">
                        <div class="card-body" id="eth-card">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-12">
                                        <p><strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Balance"): </strong></p>
                                        <h1>@Model.ETHAmount.ToString("#,##0.########")</h1>
                                        <p class="mb-0">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "View") <strong>@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Transactions")</strong></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
