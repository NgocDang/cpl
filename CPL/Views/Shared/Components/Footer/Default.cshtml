@model FooterViewModel
<footer class="footer footer-transparent navbar-shadow">
    <p class="clearfix darken-2 text-sm-center mb-0 px-2 container center-layout">
        <span class="d-block d-md-inline-block"><a asp-controller="Info" asp-action="TermsOfService" target="_blank">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TermsOfService")</a> - <a asp-controller="Info" asp-action="PrivacyPolicy" target="_blank">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "PrivacyPolicy")</a></span>
    </p>

    <p class="clearfix darken-2 text-sm-center mb-0 px-2 container center-layout">
        <span class="d-block d-md-inline-block">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Copyright") @DateTime.Now.Year <a asp-controller="Home" asp-action="Index" target="_blank">CPL</a>, @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "AllRightReserved")</span>
    </p>
</footer>