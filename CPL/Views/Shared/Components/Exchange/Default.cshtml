@model ExchangeViewModel

<div id="exchange-page">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" id="active-tab1" data-toggle="tab" href="#active1" aria-controls="active1" aria-expanded="true">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Exchange")</a>
        </li>
    </ul>
    <div class="tab-content px-2 py-1 mb-1">
        <div role="tabpanel" class="tab-pane active" id="active1" aria-labelledby="active-tab1" aria-expanded="true">
            <!-- BTC session -->
            <div class="card section-exchange mb-1">
                <div class="card-content">
                    <div class="card-body mx-0 my-0 px-0 pt-0">
                        <div class="row">
                            <div class="col-lg-3 col-12 text-center">
                                <i class="cc BTC mr-2 warning font-large-5"></i>
                            </div>
                            <div class="col-lg-4 col-12 pt-2">
                                <fieldset class="form-label-group">
                                    <input type="number" class="form-control from-amount" min="0" required>
                                    <input type="hidden" value="@Model.BTCAmount" class="max-amount" />
                                    <input type="hidden" value="BTC" class="from-currency" />
                                    <label for="from-amount" id="from-amount">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "BTCAmount")</label>
                                    <label class="error" for="from-amount" id="from-amount-error" style="display: none">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "InvalidAmountOrInsufficientFunds")</label>
                                </fieldset>
                                <button type="button" for="btc" class="btn btn-sm btn-max"><i class="fas fa-angle-double-up"></i> @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Max")</button>
                            </div>
                            <div class="btn btn-sm round col-lg-1 col-12 pt-2 text-center">
                                <button type="button" class="btn btn-md btn-swap"><i class="fas fa-exchange-alt"></i></button>
                            </div>
                            <div class="col-lg-4 col-sm-12 col-12 pt-2">
                                <fieldset class="form-label-group">
                                    <input type="number" class="form-control to-amount" readonly min="0" required>
                                    <input type="hidden" value="@Model.TokenAmount" class="max-amount" />
                                    <input type="hidden" value="CPL" class="to-currency" />
                                    <label for="to-amount" id="to-amount">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenAmount")</label>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-danger btn-next">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Next") <i class="la la-angle-right"></i></button>
                    </div>
                </div>
            </div>

            <!-- ETH session -->
            <div class="card section-exchange mb-0">
                <div class="card-content">
                    <div class="card-body mx-0 my-0 px-0 pt-0">
                        <div class="row">
                            <div class="col-lg-3 col-sm-12 col-12 text-center">
                                <i class="cc ETH mr-2 font-large-5"></i>
                            </div>
                            <div class="col-lg-4 col-sm-12 col-12 pt-2">
                                <fieldset class="form-label-group">
                                    <input type="number" class="form-control from-amount" min="0" required>
                                    <input type="hidden" value="@Model.ETHAmount" class="max-amount" />
                                    <input type="hidden" value="ETH" class="from-currency" />
                                    <label for="from-amount" id="from-amount">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ETHAmount")</label>
                                    <label class="error" for="from-amount" id="from-amount-error" style="display: none">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "InvalidAmountOrInsufficientFunds")</label>
                                </fieldset>
                                <button type="button" class="btn btn-sm btn-max"><i class="fas fa-angle-double-up"></i> @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Max")</button>
                            </div>
                            <div class="btn-sm round col-lg-1 col-sm-12 col-12 pt-2 text-center">
                                <button type="button" class="btn btn-md btn-swap"><i class="fas fa-exchange-alt"></i></button>
                            </div>
                            <div class="col-lg-4 col-sm-12 col-12 pt-2">
                                <fieldset class="form-label-group">
                                    <input type="number" class="form-control to-amount" readonly min="0" required>
                                    <input type="hidden" value="@Model.TokenAmount" class="max-amount" />
                                    <input type="hidden" value="CPL" class="to-currency" />
                                    <label for="to-amount" id="to-amount">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "TokenAmount")</label>
                                </fieldset>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-danger btn-next">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Next") <i class="la la-angle-right"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>