@model AccountLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="~/images/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "LogIn")
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="~/modules/flag-icon-css/css/flag-icon.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/now-ui-dashboard.min.css" rel="stylesheet" />
    <link href="~/css/demo.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <style type="text/css">
        .btn-warning:hover, .btn-warning:not([disabled]):not(.disabled).active, .btn-warning:not([disabled]):not(.disabled):active, .show > .btn-warning.dropdown-toggle {
            color: #fff;
            background-color: #ffc107;
            border-color: #ffc107;
        }
    </style>
</head>
<body class=" sidebar-mini ">
    <div class="wrapper wrapper-full-page ">
        <div class="full-page login-page section-image" filter-color="red" data-image="/images/login-background.jpg">
            <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
            <div class="content">
                <div class="container">
                    <div class="col-md-4 ml-auto mr-auto">
                        <div class="card card-login card-plain">
                            <div class="card-header ">
                                <div class="logo-container">
                                    <img src="~/images/now-logo.png" alt="">
                                </div>
                            </div>
                            <form id="form-log-in" method="POST" action="#" class="form needs-validation" novalidate="novalidate">
                                <div class="card-body ">
                                    <div class="form-group has-label">
                                        <label for="Email">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Email")</label>
                                        <div class="input-group no-border form-control-lg has-label">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="now-ui-icons users_circle-08"></i>
                                                </div>
                                            </div>
                                            <input id="Email" class="form-control" placeholder="@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Email")..." name="email" type="email" tabindex="1" required autofocus />
                                            <div class="invalid-feedback invalid-feedback-login">
                                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "EmailRequired")
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group has-label">
                                        <label for="Password" class="d-block">
                                            @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Password")
                                            @*<div class="float-right">
                                                <a asp-controller="Authentication" asp-action="ForgotPassword">
                                                    @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ForgotPassword")
                                                </a>
                                            </div>*@
                                        </label>
                                        <div class="input-group no-border form-control-lg">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="now-ui-icons text_caps-small"></i>
                                                </div>
                                            </div>
                                            <input id="Password" class="form-control" placeholder="@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Password")..." name="password" type="password" tabindex="2" required />
                                            <div class="invalid-feedback invalid-feedback-login">
                                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "PasswordRequired")
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="invalid-feedback invalid-feedback-login login-error">
                                            @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "InvalidEmailPassword")
                                        </div>
                                    </div>
                                    <button type="submit" id="btn-log-in" class="btn btn-primary btn-round btn-lg btn-block mb-3" tabindex="4">
                                        @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "LogIn")
                                    </button>
                                </div>
                            </form>
                            <div class="card-footer ">

                                <div class="text-white text-center">
                                    @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "NoAccount")
                                    <a asp-controller="Authentication" asp-action="Register" class="btn btn-warning btn-round btn-lg btn-block mb-3" tabindex="4" style="margin-top:15px;">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "CreateAccount")</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-1 text-white text-center">
                        @*@Html.Raw(@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ResendActivateCodeLinkDesc"))*@
                    </div>
                    <div class="mt-1 text-white text-center">
                        @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ChangeLanguage") &nbsp;
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                            <i class="fa fa-language d-lg-none"></i>
                            <div class="d-sm-none d-lg-inline-block"><span class="flag-icon @Model.Lang.Image"></span>&nbsp; @Model.Lang.Name</div>
                        </a>
                        <div class="dropdown-menu">
                            @foreach (var lang in Model.Langs)
                            {
                                if (lang.Id == Model.Lang.Id)
                                {
                                    <a href="#" data-id="@lang.Id" class="dropdown-item has-icon active lang-item">
                                        <span class="flag-icon @lang.Image"></span>&nbsp; @lang.Name
                                    </a>
                                }
                                else
                                {
                                    <a href="#" data-id="@lang.Id" class="dropdown-item has-icon lang-item">
                                        <span class="flag-icon @lang.Image"></span>&nbsp; @lang.Name
                                    </a>
                                }
                            }
                        </div>
                    </div>
                    <div class="mt-3 text-muted text-center"><a href="~/">Home</a></div>
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <div class="copyright">
                        @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Copyright") &copy;  @DateTime.Now.Year
                    </div>
                </div>
            </footer>
            <div class="full-page-background" style="background-image: url(/images/login-background.jpg) "></div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <!-- Place this tag in your head or just before your close body tag. -->
    <script src="~/js/buttons.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/js/plugins/bootstrap-notify.js"></script>
    <!-- Forms Validations Plugin -->
    <script src="~/js/plugins/jquery.validate.min.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/js/now-ui-dashboard.min.js?v=1.1.0" type="text/javascript"></script>
    <!-- Sharrre libray -->
    <script src="~/js/jquery.sharrre.js"></script>
    <script src="~/js/demo.js"></script>
    <script src="~/modules/toastr/build/toastr.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/eva.login.js"></script>
</body>
</html>