@model AccountLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="~/images/logo.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "LogIn")
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="~/css/dashboard/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/dashboard/dashboard.min.css" rel="stylesheet" />
    <link href="~/css/dashboard/now-ui-dashboard.min.css" rel="stylesheet" />
    <link href="~/css/dashboard/demo.css" rel="stylesheet" />
    <link href="~/css/dashboard/custom.css" rel="stylesheet" />

    <style type="text/css">
        .btn-warning:hover, .btn-warning:not([disabled]):not(.disabled).active, .btn-warning:not([disabled]):not(.disabled):active, .show > .btn-warning.dropdown-toggle {
            color: #fff;
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .box-captcha {
            margin: 0 auto;
        }
        .g-recaptcha {
            padding: 0 5px 0;
        }

    </style>

    <!-- Init ReCaptcha V2 -->
    <script src='https://www.google.com/recaptcha/api.js?hl=en'></script>

    <script type="text/javascript">
            // Ham kiem tra RECAPTCHAV2
            var checkValidReCaptchaV2 = function () {
                @*// Khong dung ReCaptcha Google
                var isLocalhost = '@isLocalhost';
                if (isLocalhost === 'True')
                    return true;*@
                var v = grecaptcha.getResponse();
                if (v === '') {
                    return false;
                }
                else {
                    return true;
                }
            }
    </script>
    <!-- end Init ReCaptcha V2 -->

</head>
<body class=" sidebar-mini ">
    <nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute bg-primary fixed-top">
        <div class="container-fluid">
            <div class="navbar-wrapper">
                <div class="navbar-toggle">
                    <button type="button" class="navbar-toggler">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </button>
                </div>
                <a class="navbar-brand" href="#pablo">Login Page</a>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-bar navbar-kebab"></span>
                <span class="navbar-toggler-bar navbar-kebab"></span>
                <span class="navbar-toggler-bar navbar-kebab"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navigation">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="~/Dashboard/Index" class="nav-link">
                            <i class="fa fa-home fa-fw" aria-hidden="true"></i>
                            Home
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a href="~/Authentication/Register" class="nav-link">
                            <i class="now-ui-icons tech_mobile"></i>
                            Register
                        </a>
                    </li>
                    <li class="nav-item  active ">
                        <a href="#" class="nav-link">
                            <i class="now-ui-icons users_circle-08"></i>
                            Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="wrapper wrapper-full-page ">
        <div class="full-page login-page section-image" filter-color="red" data-image="/images/login-background.jpg">
            <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
            <div class="content">
                <div class="container">
                    <div class="col-md-4 ml-auto mr-auto">
                        <div class="card card-login card-plain">
                            <div class="card-header ">
                                <div class="logo-container">
                                    <img src="~/images/logo_white.png" alt="">
                                </div>
                            </div>
                            <form id="form-log-in" method="POST" action="#" class="form needs-validation" novalidate="novalidate">
                                <div class="card-body ">
                                    <div class="form-group has-label">
                                        <label for="Email">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Email")</label>
                                        <div class="input-group no-border form-control-lg has-label">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="now-ui-icons users_circle-08"></i>
                                                </div>
                                            </div>
                                            <input id="Email" class="form-control" placeholder="@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Email")..." name="email" type="email" tabindex="1" required autofocus />
                                            <div class="invalid-feedback invalid-feedback-login">
                                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "EmailRequired")
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group has-label">
                                        <label for="Password" class="d-block">
                                            @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Password")
                                            @*<div class="float-right">
                    <a asp-controller="Authentication" asp-action="ForgotPassword">
                        @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "ForgotPassword")
                    </a>
                </div>*@
                                        </label>
                                        <div class="input-group no-border form-control-lg">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="now-ui-icons text_caps-small"></i>
                                                </div>
                                            </div>
                                            <input id="Password" class="form-control" placeholder="@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Password")..." name="password" type="password" tabindex="2" required />
                                            <div class="invalid-feedback invalid-feedback-login">
                                                @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "PasswordRequired")
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="box-captcha">
                                            <div class="g-recaptcha" data-sitekey="6LcmwmAUAAAAAOaDjdjGVgSHYj9fzZH-1-U8Ffd4"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="invalid-feedback invalid-feedback-login login-error">
                                            @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "InvalidEmailPassword")
                                        </div>
                                    </div>
                                    <button type="submit" id="btn-log-in" class="btn btn-primary btn-round btn-lg btn-block mb-3" tabindex="4">
                                        @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "LogIn")
                                    </button>
                                </div>
                            </form>
                            <div class="card-footer ">

                                <div class="text-white text-center">
                                    @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "NoAccount")
                                    <a asp-controller="Authentication" asp-action="Register" class="btn btn-warning btn-round btn-lg btn-block mb-3" tabindex="4" style="margin-top:15px;">@LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "CreateAccount")</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <div class="copyright">
                        @LangDetailHelper.Get(Context.Session.GetInt32("LangId").Value, "Copyright") &copy;  @DateTime.Now.Year
                    </div>
                </div>
            </footer>
            <div class="full-page-background" style="background-image: url(/images/login-background.jpg) "></div>
        </div>
    </div>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="~/js/dashboard/jquery.min.js"></script>
    <script src="~/js/dashboard/popper.min.js"></script>
    <script src="~/js/dashboard/bootstrap.min.js"></script>
    @*<script src="~/js/dashboard/plugins/perfect-scrollbar.jquery.min.js"></script>*@
    <!-- Place this tag in your head or just before your close body tag. -->
    <script src="~/js/dashboard/buttons.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/js/dashboard/plugins/bootstrap-notify.js"></script>
    <!-- Forms Validations Plugin -->
    <script src="~/js/dashboard/plugins/jquery.validate.min.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/js/dashboard/login.js"></script>
    <script src="~/js/dashboard/now-ui-dashboard.min.js"></script>
    <script src="~/js/dashboard/plugins/perfect-scrollbar.jquery.min.js"></script>

    <script src="~/js/dashboard/jquery.sharrre.js"></script>
    <script src="~/js/dashboard/demo.js"></script>
    <script src="~/js/dashboard/scripts.js"></script>
    <script src="~/js/dashboard/custom.js"></script>
</body>
</html>