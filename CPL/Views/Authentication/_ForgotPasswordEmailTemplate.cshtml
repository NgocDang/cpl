@model ForgotPasswordEmailTemplateViewModel
@{
    Layout = null;
    var logo = Model.RootUrl + "/images/logo.png";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>@Model.ResetYourPasswordText</title>
</head>
<body style="background-color: #FFFFFF;margin: 0;padding: 0;font-family: 'Roboto',sans-serif;-webkit-font-smoothing: antialiased;-webkit-text-size-adjust: none;height: 100%;width: 100% !important;">
    <!-- HEADER -->
    <table class="head-wrap" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;width: 100%;">
        <tr style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
            <td style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;"></td>
            <td class="header container" style="margin: 0 auto !important;padding: 0;font-family: 'Roboto',sans-serif;display: block !important;max-width: 600px !important;clear: both !important;">
                <div class="content" style="margin: 0 auto;padding: 15px;font-family: 'Roboto',sans-serif;max-width: 600px;display: block;">
                    <table style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;width: 100%;">
                        <tr class="spacer" style="background: linear-gradient(to bottom, #ffee99, white);margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
                            <td style="text-align: center;padding-bottom: 40px;padding-top: 20px;margin: 0;padding: 0;font-family: 'Roboto',sans-serif;"><img src="@logo" height="75" width="145" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;max-width: 100%;"></td>
                        </tr>
                        <tr style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
                            <td style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
                                <h3 class="collapse collapse-margin" style="margin: 0;padding: 0;font-family: 'HelveticaNeue-Light','Helvetica Neue Light','Helvetica Neue',Helvetica,Arial,'Lucida Grande',sans-serif;line-height: 1.1;margin-bottom: 15px;color: #000;font-weight: 500;font-size: 27px;margin-left: 40px;margin-right: 40px;">@Model.ResetYourPasswordText</h3>
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
            <td style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;"></td>
        </tr>
    </table>
    <!-- /HEADER -->
    <!-- BODY -->
    <table class="body-wrap" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;width: 100%;">
        <tr style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
            <td style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;"></td>
            <td class="container" style="background-color: #FFFFFF;margin: 0 auto !important;padding: 0;font-family: 'Roboto',sans-serif;display: block !important;max-width: 600px !important;clear: both !important;">
                <div class="content" style="margin: 0 auto;padding: 15px;font-family: 'Roboto',sans-serif;max-width: 600px;display: block;">
                    <table style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;width: 100%;">
                        <tr style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
                            <td style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
                                <h4 class="collapse-margin" style="margin: 0;padding: 0;font-family: 'HelveticaNeue-Light','Helvetica Neue Light','Helvetica Neue',Helvetica,Arial,'Lucida Grande',sans-serif;line-height: 1.1;margin-bottom: 15px;color: #000;font-weight: 500;font-size: 23px;margin-left: 40px;margin-right: 40px;">
                                    @Model.HiText
                            </h4>
                            <p class="collapse-margin" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;margin-left: 40px;margin-right: 40px;">@Model.ResetPasswordRequestText</p>
                            <p class="collapse-margin" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;margin-left: 40px;margin-right: 40px;">@Model.ButtonClickBelowText</p>
                            <!-- Callout Panel -->
                            <a href="@Model.ResetPasswordUrl" class="btn collapse-margin" style="margin: 0;padding: 6px 12px;font-family: 'Roboto',sans-serif;color: #fff;margin-left: 40px;margin-right: 40px;display: inline-block;margin-bottom: 10px;font-size: 14px;font-weight: normal;line-height: 1.428571429;text-align: center;white-space: nowrap;vertical-align: middle;cursor: pointer;border: 1px solid transparent;border-radius: 4px;-webkit-user-select: none;-moz-user-select: none;-ms-user-select: none;-o-user-select: none;user-select: none;background-color: #ffd300;border-color: #ffd300;text-decoration: none;">@Model.ResetYourPasswordText</a>
                            <p class="collapse-margin" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;margin-left: 40px;margin-right: 40px;">@Model.NotWorkUrlText</p>
                            <p style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;"></p>
                            <p class="collapse-margin" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;margin-left: 40px;margin-right: 40px;"><a href="@Model.ResetPasswordUrl" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;color: #0000ff;">@Model.ResetPasswordUrl</a></p>
                            <p class="collapse-margin" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;margin-left: 40px;margin-right: 40px;">@Model.NotYourRequestText</p>
                            <p class="collapse-margin" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;margin-left: 40px;margin-right: 40px;">@Model.CheersText</p>
                            <!-- social & contact -->
                            <table width="100%" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;width: 100%;">
                                <tr style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
                                    <td style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
                                        <!-- column 2 -->
                                        <table align="left" class="column" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;width: 100%;float: left;">
                                            <tr style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
                                                <td style="margin: 0;padding: 15px;font-family: 'Roboto',sans-serif;">
                                                    <h5 style="margin-left: 20px;margin: 0;padding: 0;font-family: 'HelveticaNeue-Light','Helvetica Neue Light','Helvetica Neue',Helvetica,Arial,'Lucida Grande',sans-serif;line-height: 1.1;margin-bottom: 15px;color: #000;font-size: 17px;">@Model.ContactInfoText</h5>
                                                    <p style="margin-left: 20px;margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;">
                                                        @Model.EmailText: <a href="emailto:@CPLConstant.SMTP.From" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;color: #0000ff;">@CPLConstant.SMTP.From</a>
                                                    </p>
                                                    <p style="margin-left: 20px;margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;">
                                                        @Model.WebsiteText: <a href="@Model.RootUrl" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;color: #0000ff;">@Model.RootUrl</a>
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>
                                        <!-- /column 2 -->
                                    </td>
                                </tr>
                            </table>
                            <!-- /social & contact -->
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /content -->
        </td>
        <td style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;"></td>
    </tr>
</table>
<!-- /BODY -->
<!-- FOOTER -->
<table class="footer-wrap" style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;width: 100%;clear: both !important;">
    <tr style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
        <td style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;"></td>
        <td class="container" style="margin: 0 auto !important;padding: 0;font-family: 'Roboto',sans-serif;display: block !important;max-width: 600px !important;clear: both !important;">
            <!-- content -->
            <div class="content" style="margin: 0 auto;padding: 15px;font-family: 'Roboto',sans-serif;max-width: 600px;display: block;">
                <table style="background: #ffd300;margin: 0;padding: 0;font-family: 'Roboto',sans-serif;width: 100%;">
                    <tr style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;">
                        <td align="center" style="padding: 5px;margin: 0;font-family: 'Roboto',sans-serif;">
                            <p style="color: #666666;margin: 0;padding: 0;font-family: 'Roboto',sans-serif;margin-bottom: 10px;font-weight: normal;font-size: 14px;line-height: 1.6;">
                                @Model.ExpiredEmail24hText
                            </p>
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /content -->
        </td>
        <td style="margin: 0;padding: 0;font-family: 'Roboto',sans-serif;"></td>
    </tr>
</table>
<!-- /FOOTER -->
</body>
</html>
